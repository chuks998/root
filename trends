first_bar_open, first_bar_close = float(input("first bar OPEN: ")), float(input("first bar CLOSE: \n"))
second_bar_open, second_bar_close = float(input("second bar OPEN: ")), float(input("second bar CLOSE: \n"))
third_bar_open, third_bar_close = float(input("third bar OPEN: ")), float(input("third bar CLOSE: \n"))
fourth_bar_open, fourth_bar_close = float(input("fourth bar OPEN: ")), float(input("fourth bar CLOSE: \n"))
fifth_bar_open, fifth_bar_close = float(input("fifth bar OPEN: ")), float(input("fifth bar CLOSE: \n"))
sixth_bar_open, sixth_bar_close = float(input("sixth bar OPEN: ")), float(input("sixth bar CLOSE: \n"))
seventh_bar_open, seventh_bar_close = float(input("seventh bar OPEN: ")), float(input("seventh bar CLOSE: \n"))
eighth_bar_open, eighth_bar_close = float(input("eighth bar OPEN: ")), float(input("eighth bar CLOSE: \n"))
