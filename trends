tenth_bar_open, tenth_bar_close = float(input("tenth bar OPEN: ")), float(input("tenth bar CLOSE: \n"))

print("############################################################################\n")

# AVERAGE MOVEMENT OF THE BARS

avg1 = (first_bar_open + first_bar_close) / 2
avg2 = (second_bar_open + second_bar_close) / 2
avg3 = (third_bar_open + third_bar_close) / 2
avg4 = (fourth_bar_open + fourth_bar_close) / 2
avg5 = (fifth_bar_open + fifth_bar_close) / 2
avg6 = (sixth_bar_open + sixth_bar_close) / 2
avg7 = (seventh_bar_open + seventh_bar_close) / 2
avg8 = (eighth_bar_open + eighth_bar_close) / 2
avg9 = (ninth_bar_open + ninth_bar_open) / 2
avg10 = (tenth_bar_open + tenth_bar_close) / 2

# CLOSING AVERAGE MOVEMENT OF TH BARS

avg_close = (first_bar_close + second_bar_close + third_bar_close + fourth_bar_close + fifth_bar_close
             + sixth_bar_close + seventh_bar_close + eighth_bar_close + ninth_bar_open + tenth_bar_close
             ) / 10
avg_open = (first_bar_open + second_bar_open + third_bar_open + fourth_bar_open + fifth_bar_open + sixth_bar_open
            + seventh_bar_open + eighth_bar_open + ninth_bar_open + tenth_bar_open
            ) / 10

print(f"open average is {avg_open}\nclosing average is {avg_close}")

if avg_close > tenth_bar_close:
    print("market will bull")
elif avg_close < tenth_bar_close:
    print("market will bear")

number_of_pip = (avg_open - avg_close) / 2
pip = number_of_pip * 100000
if number_of_pip > 0:
    print(f"Expected number of pip market will BULL is estimated\n{pip} pips")
elif number_of_pip < 0:
    print(f"Expected number of pip market will BEAR is estimated\n{pip} pips")

take_profit = tenth_bar_close + (pip / 10000)
print(f"take profit in {take_profit}")

